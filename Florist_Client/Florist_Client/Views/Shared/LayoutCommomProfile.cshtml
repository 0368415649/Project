
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutCommom.cshtml";
    @Styles.Render("~/Resources/css/profile_user.css")

}

<div class="grap_profile_color">
    <div class="row">
        <div class="col-3 grap_profile_color_grap">
            <div class="grap_profile_color_name">
                <i class="fa-solid fa-user me-3"></i>
                <span class="grap_profile_color_name_txt">@(Request.Cookies["customerName"]!= null ? Request.Cookies["customerName"].Value : "")</span>
            </div>
            <div class="mt-3 grap_profile_nav">
                <a href="Profile"><i class="fa-regular fa-user me-3"></i> <span>My account</span></a>
                <ul class="ul_profile mt-3">
                    <a href="/Profile" class="li_profile mt-2 @(ViewBag.profile != null ? "color_profile" : "")">
                    <li>Profile</li></a>
                    <a href="/ProfileAddress" class="li_profile mt-2  @(ViewBag.profileAddress != null ? "color_profile" : "")">
                    <li>Address</li></a>
                    <a href="/ProfilePassword" class="li_profile mt-2 @(ViewBag.profilePass != null ? "color_profile" : "")">
                    <li>ChangePassword</li></a>
                </ul>
            </div>
            <div class="mt-3 grap_profile_nav">
                <a href="/ProfileOrder"><i class="fa-solid fa-list-ul me-3"></i> <span>Order</span></a>
            </div>
        </div>
        @RenderBody()
        <!-- Css edit profile -->

    </div>
</div>

