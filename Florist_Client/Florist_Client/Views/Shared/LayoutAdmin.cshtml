<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <script src="https://kit.fontawesome.com/b369642a0f.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    @Styles.Render("~/Resources/css/adminMain.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<style>
    a{
        text-decoration:none;
    }
</style>
<body>
    <div class="row">
        <div class="col-12 row_header row">
            <div class="text-center header_title col-10 mt-3">Florist Manage</div>
            <div class="header_content col-2">
                xin chao <span>Admin</span>
            </div>
        </div>

        <div class="col-3 sidebar_wrap">
            <ul class="nav_sidebar">
                <a href="" class="nav_link">
                <li class="sidebar_icon"><i class="fa-solid fa-gauge me-3"></i>Thống kê</li></a>
                <a href="/ManageOrder" class="nav_link">
                <li class="sidebar_icon side_item3 @(ViewBag.Order != null ? "chang_color_admin" : "")"><i class="fa-solid fa-cart-shopping me-3"></i>Đơn hàng</li></a>
                <a href="" class="nav_link">
                <li class="sidebar_icon side_item3"><i class="fa-brands fa-product-hunt me-3"></i>Sản phẩm</li></a>
                <a href="" class="nav_link">
                <li class="sidebar_icon side_item3"><i class="fa-solid fa-user me-3"></i>Khách hàng</li></a>
                <a href="" class="nav_link">
                <li class="sidebar_icon side_item3"><i class="fa-solid fa-store me-3"></i>Doanh Số</li></a>
                <a href="" class="nav_link">
                <li class="sidebar_icon side_item3"><i class="fa-solid fa-wrench me-3"></i>Thiết lập</li></a>
                <a href="/ManageEvalute" class="nav_link">
                <li class="sidebar_icon side_item3 @(ViewBag.Evalute != null ? "chang_color_admin" : "")"><i class="fa-regular fa-rectangle-list me-3"></i></i>Evalute Manage</li></a>
                <a href="/ManageCategory" class="nav_link">
                <li class="sidebar_icon side_item3 @(ViewBag.Category != null ? "chang_color_admin" : "")"><i class="fa-regular fa-rectangle-list me-3"></i></i>Category Manage</li></a>
                <a href="/ManageSupplier" class="nav_link">
                <li class="sidebar_icon side_item3 @(ViewBag.Supplier != null ? "chang_color_admin" : "")"><i class="fa-solid fa-truck-field me-3"></i>Supplier Manage</li></a>
                <a href="/ManageMessage" class="nav_link">
                <li class="sidebar_icon side_item3 @(ViewBag.messageAdmin != null ? "chang_color_admin" : "")"><i class="fa-regular fa-envelope me-3"></i>Message Manage</li></a>
                <a href="/ManageAccount" class="nav_link">
                <li class="sidebar_icon side_item3 @(ViewBag.account != null ? "chang_color_admin" : "")"><i class="fa-solid fa-universal-access me-3"></i>Account Manage</li></a>
            </ul>
        </div>
        <div class="col-3"></div>
        <div class="col-9" style="padding: 30px 50px">
            @RenderBody()
        </div>
    </div>
