<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <script src="https://kit.fontawesome.com/b369642a0f.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    @Styles.Render("~/Resources/css/commom.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @*alert cart*@
    <div class="alert_cart">
        Added to cart
    </div>
    <div class="alert_cart2">
        Thank you for your purchase
    </div>

    <div class="alert_registration">
        Registration successed!
    </div>

    <div class="alert_login">
        Welcome!
    </div>

    <div class="alert_check_login">
        Please login to add items!
        <div>
            <button class="cart_go_login">Go to Login</button>
        </div>
    </div>

    @*alert cart*@

    <!--  Header  -->
    <div class="header">
        <div class="row header-title">
            <div class="col-3"></div>
            <div class="col-6 header_title">
                <p>
                    Order by 5pm for same-day delivery Mon - Sat, 2pm for Sun, 7 days a week across Singapore.
                    <br>Fresh premium blooms, handmade by our team of florists. @(ViewBag.checklogin)

                </p>
            </div>
            <div class="col-3 grap">
                @if (Request.Cookies["customerName"] == null)
                {
                    <div class="register_css">
                        <div id="register_btn">Register</div>
                    </div>
                    <span style=" color: darkgrey; ">/</span>
                    <div class="register_css">
                        <div id="login_btn">Login</div>
                    </div>
                }
                else
                {
                    <div class="grap_price_2">
                        <div class="">
                            Hello, @(Request.Cookies["customerName"].Value)
                            <i class="fa-solid fa-user login_icon"></i>
                        </div>
                        <div class="chirld_grap_2">
                            <div><a href="Profile">Profile</a></div>
                            <div><a href="LogoutPage">Logout</a></div>
                        </div>
                    </div>

                }
            </div>
        </div>
        <div class="container_width">
            <div class="row link_grap">
                <div class="col-5 link_col" style="margin-left:45px">
                    <!-- Category link -->
                    <ul class="grap category_css">
                        <li class="left_item"><a class="left_item_hover" href="/SearchProduct?category=1">Flower basket</a> </li>
                        <li class="left_item"><a class="left_item_hover" href="/SearchProduct?category=2">Bouquet</a></li>
                        <li class="left_item"><a class="left_item_hover" href="/SearchProduct?category=3">Birthday</a> </li>
                        <li class="left_item"><a class="left_item_hover" href="/SearchProduct?category=4">Graduate</a></li>
                        <li class="left_item"><a class="left_item_hover bd_none" href="SearchProduct?category=5">Grand opening flower</a> </li>
                    </ul>
                </div>
                <!-- Category link -->
                <div class="col-1 logo_flex" style="margin-left:25px">
                    <a href="/HomePage"><img width="100%" src="~/Resources/img/home/logo_project.png" alt=""></a>
                </div>
                <!-- cart- -->
                <div class="col-3 grap_cart">
                    <div class="header-search">
                        <div class="header-search-grap">
                            <input type="text" class="header-search-input" placeholder="Search here ...">
                            <a href="/SearchProduct" class="header-search-icon">
                                <i style="font-size: 25px;" class="fa-solid fa-magnifying-glass header-search-icons"></i>
                            </a>
                        </div>
                        <div class="grap_icon_cart">
                            <label for="check_boxx" class="header-search-cart"><a href="View_cart"><i class="fa-solid fa-cart-arrow-down cart_cl"></i></a></label>
                            <div class="grap_icon_cart_number">0</div>
                        </div>
                    </div>
                </div>
                <!-- cart- -->
            </div>
        </div>
    </div>

    <!--  Header  -->
    @RenderBody()
    <!-- footer -->
    <div class="footer">
        <div class="row" class="text-center" style="padding:30px 50px 10px 250px">
            <div class="col-lg-2 col-sm-3 boxz">
                <div class="footer-one-title">
                    Contact Us
                </div>
                <ul class="">
                    <li class="footer-item"><a style="color:white;" href="https://www.facebook.com/tatsu.michio.5"><i class="fa-brands fa-facebook me-2"></i>Facebook</a></li>
                    <li class="footer-item"><a style="color:white;" href="https://www.facebook.com/tatsu.michio.5"><i class="fa-brands fa-facebook-messenger me-2"></i>Messenger</a></li>
                    <li class="footer-item"><a style="color:white;" href="https://www.facebook.com/tatsu.michio.5"><i class="fa-brands fa-instagram me-2"></i>Instagram</a></li>
                </ul>
            </div>

            <div class="col-lg-2 col-sm-3 boxz">
                <div class="footer-one-title">About Us</div>
                <ul class="">
                    <li class="footer-item"><a href="/Florist_values">Florist Values</a></li>
                    <li class="footer-item"><a href="/Marketing">Thoughtful Marketing Movement</a></li>
                    <li class="footer-item"><a href="/About_us">About us</a></li>
                </ul>
            </div>

            <div class="col-lg-2 col-sm-3 boxz">
                <div class="footer-one-title">Services</div>
                <ul class="">
                    <li class="footer-item"><a href="/Terms">Terms & conditions</a></li>
                    <li class="footer-item"><a href="/Police">Privacy Policy</a></li>
                </ul>
            </div>

            <div class="col-lg-4 col-sm-12 boxz">
                <div class="footer-one-title">ABOUT US</div>
                <div class="footer-content">
                    LVLY is a collaboration between Co-Founders Hannah Spilva and Verity Tuck. The idea for LVLY started with a purpose rather than a product. They wanted to build a business that would help keep loved ones connected and spread a bit of joy in the world. Han and Vez were living away from home, missing friends and family and saw a gap in the market to send affordable flowers and gifts that were authentic, fun and thoughtful.
                    <a class="footer-link" href="./">Online Store.</a>
                </div>
            </div>

        </div>
    </div>
    <!-- footer -->
    <!-- Css login -->
    <div class="modall  @((ViewBag.checklogin != null) ? "display_block": "") @((ViewBag.checkRegistration != null) ? "display_block": "")" id="modal">
    </div>
    <div class="modal__body modal__body-registration  @((ViewBag.checkRegistration != null) ? "display_block": "")">
        <div class="modal__inner">
            <form action="RegistrationPage" method="post" id="form_registration" class="form">
                <div class="modal__inner-heard">
                    <div class="modal__inner-heard-register">Registration</div>
                    <label for="name" class="modal__inner-heard-login">Login</label>
                </div>
                <div id="message_error"> @((ViewBag.checkRegistration != null) ? "Phone number exists" : "")</div>
                <div class="modal__inner-content">
                    <div class="modal__inner-content-model">
                        <div class="grap_email">
                            <input type="number" rules="min:10" class="modal__inner-content-input" name="phone" placeholder='Please enter phone number ....' />
                            <span style="color: red" class="message"></span>
                        </div>
                        <div class="grap_email">
                            <input type="text" rules="" class="modal__inner-content-input" name="first_name" placeholder='First Name ...' />
                            <span style="color: red" class="message"></span>
                        </div>
                        <div class="grap_email">
                            <input type="text" rules="" class="modal__inner-content-input" name="last_name" placeholder='Last Name ...' />
                            <span style="color: red" class="message"></span>
                        </div>
                        <div class="grap_email">
                            <input type="password" rules="" class="modal__inner-content-input" name="password" placeholder='Please enter password ....' />
                            <span style="color: red" class="message"></span>
                        </div>
                        <div class="rules">
                            By registering , you agree to <a href="#" class="rules-content">Terms of Service</a> & <a href="#" class="rules-content">Privacy Policy</a>
                        </div>
                        <div class="btn-location grap_button">
                            <label for="name" class="btn btn--hover">Back</label>
                            <button type="submit" class="btn btn--register btn-login">Registration</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="modal__body modal__body-login  @((ViewBag.checklogin != null) ? "display_block": "")">
        <div class="modal__inner">
            <form id="login_form" action="CheckLogin" method="post">
                <div class="form2">
                    <div class="modal__inner-heard">
                        <div class="modal__inner-heard-register">Login</div>
                        <label for="name2" class="modal__inner-heard-registration">Registration</label>
                    </div>
                    <div id="message_error"> @((ViewBag.checklogin != null) ? "Wrong username or password" : "")</div>
                    <div class="modal__inner-content">
                        <div class="modal__inner-content-model">
                            <div class="grap_email">
                                <input type="number" rules="" id="login-email" name="login_phone" class="modal__inner-content-input" placeholder='Phone ....'>
                                <span style="color: red" class="message"></span>
                            </div>
                            <div class="grap_email mt-2">
                                <input type="password" rules="" id="login-password" name="login_password" class="modal__inner-content-input" placeholder='Password ....'>
                                <span style="color: red" class="message"></span>
                            </div>
                        </div>
                        <div class="btn-location grap_button">
                            <label for="name2" class="btn btn--hover btn--hover-back ">Back</label>
                            <button type="submit" class="btn btn--register btn-registration">Login</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <!-- Login -->
        @*      @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)*@
</body>

@Scripts.Render("~/Resources/js/login.js")
@Scripts.Render("~/Resources/js/cart.js")
@Scripts.Render("~/Resources/js/test.js")
@Scripts.Render("~/Resources/js/vali.js")
<script>
</script>
@if (ViewBag.registrationOk != null)
{
    <script>
        showAlerRegistration();
    </script>
}

@if (ViewBag.loginOk != null)
{
    <script>
        showAlerLogin();
    </script>
}

@if (ViewBag.notLogin != null)
{
    <script>
        showAlertCartLogin()
    </script>
}
@if (ViewBag.removeCart != null)
{
    <script>
        localStorage.removeItem("cart");
        show_cart_number();
        showAlertCart2()
    </script>
}

</html>
