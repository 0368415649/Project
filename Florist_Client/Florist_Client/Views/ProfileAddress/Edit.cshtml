@model Florist_Client.Models.Flower_recipient

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/LayoutCommomProfile.cshtml";
}

<div style="padding: 50px" class="col-9 grap_profile_color_image_2">
    @using (Html.BeginForm())
