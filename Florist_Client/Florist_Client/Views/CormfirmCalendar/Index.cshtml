
@{
    Layout = null;
    @Styles.Render("~/Resources/css/cart_confirm.css")
    @Styles.Render("~/Resources/css/view_cart.css")
    @Styles.Render("~/Resources/css/calendar.css")
    Layout = "~/Views/Shared/LayoutCommomCart.cshtml";
}

<div class="col-6 grap_left_cart">
    <form id="form_calendar" method="post" action="">
        <img src="~/Resources/img/home/logo_project.png" height="60px;" alt="">
        <div class="    calendar">
            <div class="view_cart_grap_title">Delivery Information</div>
            <p style="font-size: 12px;">Please Select A Delivery Date:</p>
            <div class="container">
                <div style="justify-content: space-between; padding: 20px 0px ;" class="d-flex">
                    <i class="prev-month fa fa-chevron-left fa-3x"></i>
                    <div class="month-year text-center">
                        <h3></h3>
                    </div>
                    <i class="next-month fa fa-chevron-right fa-3x"></i>
                </div>
                <div class="min_width">
                    <table class="table table-bordered table_calendar">
                        <tr>
                            <th>S</th>
                            <th>M</th>
                            <th>T</th>
                            <th>W</th>
                            <th>T</th>
                            <th>F</th>
                            <th>S</th>
                        </tr>
                    </table>
                </div>
                <div style="color:red; " class="message_date text-center"></div>
                <p style="margin: 10px 0px ; font-size: 15px;">Please select a delivery time:</p>
                <div class="content-more-quantity-number">
                    <div type="text" id="quantity" class="buy_input time_buy_now">9 AM - 1 PM</div>
                    <div type="text" id="quantity" class="buy_input time_buy_now">1 PM - 6 PM</div>
                    <div type="text" id="quantity" class="buy_input time_buy_now">6 PM - 9 PM</div>
                </div>
                <div style="color:red; " class="message_time text-center"></div>
                <p>* Office Deliveries Will Be Completed Latest By 5 PM</p>
                <p style="font-size: 17px;" class="">Choose Your Personal Card Message:</p>
                <input type="text" relus="" id="date_buy" hidden class="date_buy" name="date_buy" value="" />

                <input type="text" relus="" id="time_buy" hidden name="time_buy" value="" />

                <textarea relus="" title="Please provide message note here." placeholder="You're better than the best!"
                          id="message_show" class="input-text question-field note" rows="6" cols="20" maxlength="140" name="note_message" maxlength="140"></textarea>
                <div style="color:red; " class="message_message text-center"></div>
                <div class="mt-5">
                    @foreach (var item in ViewBag.listMessage)
                    {
                        <button type="button" data-id="@(item.Message_id)" data-content="@(item.Message_content)"
                                class="btn_commom btn_color message_click">
                            @(item.Category)
                        </button>
                    }

                </div>
                <div class="mt-3"></div>
            </div>
        </div>


        <div class="d-flex  grap_btn_comfirm_cart">
            <a href="/Check_Out">Return to cart</a>
            <button type="submit" class="">Continue to payment</button>
        </div>
    </form>
</div>


@Scripts.Render("~/Resources/js/view_cart.js")
@Scripts.Render("~/Resources/js/message.js")
@Scripts.Render("~/Resources/js/vali.js")

<script>
    $("#form_calendar").submit(function (e) {
        date_buy = $("#date_buy").val()
        time_buy = $("#time_buy").val()
        note_message = $("#message_show").val()
        if (date_buy === "") {
            $(".message_date").html("Please select delivery date");
        } else {
            $(".message_date").html("");
        }
        if (time_buy === "") {
            $(".message_time").html("Choice select delivery time");
        } else {
            $(".message_time").html("");
        }
        if (note_message === "") {
            $(".message_message").html("Please write a message");
        } else {
            $(".message_message").html("");
        }
        if ($("#date_buy").val() != "" && $("#time_buy").val() != "" && $("#message_show").val() != "") {
            return 1;
        } else {
            e.preventDefault();
        } 
    });
</script>