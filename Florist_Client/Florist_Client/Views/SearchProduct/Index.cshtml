<div class="container grap_serach_product" style="padding-top: 170px;">
    <a href="HomePage"><i class="fa-solid fa-house" style="color: #f962b2;"></i></a>
    <i class="fa-solid fa-angles-right" style="color: #132139;"></i>
    <span>@(ViewBag.category_title)</span>
    <div class="grap_s_title">@(ViewBag.category_title)</div>
    <div class="row">
        <div class="col-3 mt-4">
            <div class="title_left_s">Bộ Sưu Tập</div>
            <div class="narbar_grap "><a class="narbar_item @((ViewBag.categoryHover == 1) ? "narbar_item_hover" : "")" href="SearchProduct?category=1">Flower basket</a></div>
            <div class="narbar_grap"><a class="narbar_item @((ViewBag.categoryHover == 2) ? "narbar_item_hover" : "")" href="SearchProduct?category=2">Bouquet</a></div>
            <div class="narbar_grap"><a class="narbar_item @((ViewBag.categoryHover == 3) ? "narbar_item_hover" : "")" href="SearchProduct?category=3">Birthday</a></div>
            <div class="narbar_grap"><a class="narbar_item @((ViewBag.categoryHover == 4) ? "narbar_item_hover" : "")" href="SearchProduct?category=4">Graduate</a></div>
            <div class="narbar_grap"><a class="narbar_item @((ViewBag.categoryHover == 5) ? "narbar_item_hover" : "")" href="SearchProduct?category=5">Grand opening flower</a></div>
        </div>


        <div style="" class="col-9 mt-4">
            @if (ViewBag.totalPage > 0)
            {
                <div class="grap_serach row">
                    <div class="col-2 grap_price_hot">
                        <a href="SearchProduct?sortName=sold&typeSort=DESC&searchName=@(ViewBag.searchName)">Ban chay</a>
                    </div>
                    <div class="col-8">
                        <div class="grap_price">
                            <div class="grap_price_label"><span>Gia</span> <i class="fa-solid fa-chevron-down" style="color: #000000;"></i></div>
                            <div class="chirld_grap">
                                <div><a href="SearchProduct?sortName=Price&typeSort=DESC&searchName=@(ViewBag.searchName)">Gia: Cap den thap</a></div>
                                <div><a href="SearchProduct?sortName=Price&typeSort=ASC&searchName=@(ViewBag.searchName)">Gia: Thap den cao</a></div>
                            </div>
                        </div>
                    </div>
                    <div style="margin-left: auto;" class="col-2 mt-1">
                        <span>@(ViewBag.currenPage)</span>/<span>@(ViewBag.totalPage)</span>
                        <a href="SearchProduct?sortName=@(ViewBag.sortName)&typeSort=@(ViewBag.typeSort)&searchName=@(ViewBag.searchName)&currenPage=@(ViewBag.currenPage-1)" class="icon_pagging ms-3 @((ViewBag.currenPage == 1) ? "none_icon" : "")"><i class="fa-solid fa-angle-left"></i></a>
                        <a href="SearchProduct?sortName=@(ViewBag.sortName)&typeSort=@(ViewBag.typeSort)&searchName=@(ViewBag.searchName)&currenPage=@(ViewBag.currenPage+1)" class="icon_pagging @((ViewBag.totalPage <= 1 || ViewBag.currenPage == ViewBag.totalPage) ? "none_icon" : "")"><i class="fa-solid fa-angle-right"></i></a>
                    </div>
                </div>

                <div class="grap_list_product">
                    <div class="row grap_product_image">
                        @foreach (var item in ViewBag.Product1)
                        {
                            <div style="padding-top: 50px;" class="col-xl-3 col-lg-4 col-md-6 grap_product_click">
                                <a href="DetailProduct?product_id=@(item.Product_id)">
                                    <img width="100%" height="82%" src="~/Resources/img/product/@(item.Image).png" alt="">
                                </a>
                                <div class="font_product">
                                    <div class="product_name">@(item.Product_name)</div>
                                    <div class="product_price mt-2">
                                        <div class="pricr me-3">@((item.Discount != 0) ? ((100 - item.Discount)/100 * item.Price) + "$" : "")</div>
                                        <div class="pricr @((item.Discount != 0) ? "text_ngang" : "")">@(item.Price)$</div>
                                        <div class="price_cart"><i class="fa-solid fa-cart-arrow-down cart_cl"></i></div>
                                    </div>
                                    <div class="text-end">
                                        <div class="me-3 sold_colorr">Sold: @(item.Sold)</div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            }
            else
            {
                <div>No item</div>
            }
        </div>
    </div>
