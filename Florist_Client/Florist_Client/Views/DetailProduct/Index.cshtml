
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutCommom.cshtml";
    @Styles.Render("~/Resources/css/show_more.css")

}

<!-- more product -->
<div class="container container_title">
    <div class="product_more_title">
        @(ViewBag.detailProduct.Product_name)
    </div>
</div>
<div class="container container_more">
    <div class="row">
        <div class="col-6" style="background :#d7eaf1;">
            <img width="60%" height="100%" style="display: block; margin: auto; " src="~/Resources/img/product/@(ViewBag.detailProduct.Image).png" alt="">
        </div>
        <div class="col-lg-6 col-sm-5 col-12 boxx contant-more-grap" style="">
            <div class="content-more-discription">@(ViewBag.detailProduct.Description)</div>
            <ul class="content-more-list">
                <li class="content-more-item">Beautiful flower arrangement in our trademark LVLY jar</li>
                <li class="content-more-item">A LVLY glass jar with assorted quotes including ‘Have a LVLY day’, ‘You LVLY thing’ , ‘Sending LVLY Vibes’.</li>
                <li class="content-more-item">A message card for a personal note</li>
            </ul>
            <div class="content-more-discription">All packaged in a 'Someone Thinks You're Awesome' gift box.</div>
            <div class="sen"></div>
            <div class="sen">Total</div>
            <div class="sen sen_text">@(ViewBag.detailProduct.Price)$</div>
            <div class="text-end">
                <button data-id="@(ViewBag.detailProduct.Product_id)" data-name="@(ViewBag.detailProduct.Product_name)" 
                        data-img="@(ViewBag.detailProduct.Image)"  data-price="@(ViewBag.detailProduct.Price)" 
                        data-discount="@(ViewBag.detailProduct.Discount)" data-check_login="@((Request.Cookies["customerID"] != null) ? Request.Cookies["customerID"].Value  : "")"
                        id="add_cart" class="content-more-cart">Add to Cart</button>
            </div>
        </div>
    </div>
</div>
<!-- more product -->
<!-- review -->
<div id="rivew" class="container review_grap_big">
    <div class="grap_rivew_title">US PRODUCT REVIEW</div>
    <div class="row review_grap">
        <div class="col-2 review_grap_color">
            <span class="review_grap_text">4.7</span> <span>trên 5</span>
            <div class="">
                <span class="color-change">
                    <i class="fa-solid fa-star "></i>
                    <i class="fa-solid fa-star "></i>
                    <i class="fa-solid fa-star "></i>
                    <i class="fa-solid fa-star "></i>
                    <i class="fa-solid fa-star "></i>
                </span>
            </div>
        </div>
        <div class="col-10">
            <div class="d-flex">
                <a href="DetailProduct?product_id=@(ViewBag.detailProduct.Product_id)#rivew"><div class="btn_rivew @((ViewBag.rate == 0) ? "btn_rivew_all" : "")">Tất cả</div></a>
                <a href="DetailProduct?product_id=@(ViewBag.detailProduct.Product_id)&rate=5#rivew"><div class="btn_rivew @((ViewBag.rate == 5) ? "btn_rivew_all" : "")">5 sao (@(ViewBag.countRate5))</div></a>
                <a href="DetailProduct?product_id=@(ViewBag.detailProduct.Product_id)&rate=4#rivew"><div class="btn_rivew @((ViewBag.rate == 4) ? "btn_rivew_all" : "")">4 sao (@(ViewBag.countRate4))</div></a>
                <a href="DetailProduct?product_id=@(ViewBag.detailProduct.Product_id)&rate=3#rivew"><div class="btn_rivew @((ViewBag.rate == 3) ? "btn_rivew_all" : "")">3 sao (@(ViewBag.countRate3))</div></a>
                <a href="DetailProduct?product_id=@(ViewBag.detailProduct.Product_id)&rate=2#rivew"><div class="btn_rivew @((ViewBag.rate == 2) ? "btn_rivew_all" : "")">2 sao (@(ViewBag.countRate2))</div></a>
                <a href="DetailProduct?product_id=@(ViewBag.detailProduct.Product_id)&rate=1#rivew"><div class="btn_rivew @((ViewBag.rate == 1) ? "btn_rivew_all" : "")">1 sao (@(ViewBag.countRate1))</div></a>
            </div>
        </div>
    </div>
    @foreach (var item in ViewBag.listEvalute)
    {
        <div class="row review_grap_all">
            <div class="col-1 review_logo">
                <i class="fa-solid fa-user login_icon"></i>
            </div>
            <div class="col-11 review_content_text">
                <div class="review_name">@(item.Customer_Name)</div>
                <div class="">@(item.Create_at)</div>
                <div class="">
                    <span class="color-change_font">
                        @for (int i = 1; i <= item.Rate; i++)
                        {
                            <i class="fa-solid fa-star change_font"></i>

                        }
                    </span>
                </div>
                <div class="content_rivwe">
                    @(item.Evalute_content)
                </div>
            </div>
            <div class="sen"></div>
        </div>
    }


</div>
</div>
<!-- review -->
<!-- list product -->
<div class="container">
    <div class="grap_list_product">
        <div class="grap_title flex_aline d-flex justify-content-between">
            <div class="category_title">@(ViewBag.detailProduct.Category_name)</div>
            <div class="show_more">
                <a href="SearchProduct?category=1">Show more</a>
            </div>
        </div>
        <div class="row grap_product_image">
            @foreach (var item in ViewBag.Product1)
            {
                <div class="col-xl-3 col-lg-4 col-md-6 grap_product_click">
                    <a href="DetailProduct?product_id=@(item.Product_id)">
                        <img width="100%" height="82%" src="~/Resources/img/product/@(item.Image).png" alt="">
                    </a>
                    <div class="font_product">
                        <div class="product_name">@(item.Product_name)</div>
                        <div class="product_price mt-2">
                            <div class="pricr me-3">@((item.Discount != 0) ? ((100 - item.Discount)/100 * item.Price) + "$" : "")</div>
                            <div class="pricr @((item.Discount != 0) ? "text_ngang" : "")">@(item.Price)$</div>
                            <div onclick="addToCart('@(item.Product_id)','@(item.Product_name)','@(item.Image)',@(item.Price),@(item.Discount) @((Request.Cookies["customerID"] != null) ? "," + Request.Cookies["customerID"].Value  : null))"
                                 class="price_cart"><i style="font-size: 1rem;" class="fa-solid fa-cart-arrow-down cart_cl"></i></div>
                        </div>
                        <div class="text-end">
                            <div class="me-3 sold_colorr">Sold: @(item.Sold)</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
